{% extends 'base.html.twig' %}

{% block title %}
  Modification
{% endblock %}

{% block body %}

<section class="bg-white dark:bg-gray-900">
  <div class="max-w-2xl px-4 py-8 mx-auto lg:py-16">
      <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Modification d'album</h2>
      
      {# Utilisation du formulaire Symfony pour la modification #}
      {{ form_start(form, {'attr': {'id': 'edit-form'}}) }}
          <div class="grid gap-4 mb-4 sm:grid-cols-2 sm:gap-6 sm:mb-5">
              <div class="w-full">
                  <label for="{{ form.title.vars.id }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Album</label>
                  {{ form_widget(form.title, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500'}}) }}
              </div>
              <div class="w-full">
                  <label for="{{ form.band.vars.id }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Artiste</label>
                  {{ form_widget(form.band, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500'}}) }}
              </div>
              <div>
                  <label for="{{ form.genres.vars.id }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Genre</label>
                  {{ form_widget(form.genres, {'attr': {'class': 'h-12 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-purple-500 dark:focus:border-purple-500'}}) }}
              </div>
              <div>
                  <label for="{{ form.releaseDate.vars.id }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Date de sortie</label>
                  {{ form_widget(form.releaseDate, {'attr': {'class': 'h-12 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-purple-500 dark:focus:border-purple-500'}}) }}
              </div>
              <div>
                  <label for="{{ form.image.vars.id }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Image</label>
                  {{ form_widget(form.image, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500'}}) }}
              </div>
          </div>
          <div class="flex items-right space-x-4">
              <button type="submit" class="text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                  Modifier l'album
              </button>
      {{ form_end(form) }}
      
      {# Formulaire séparé pour la suppression #}
      <form method="post" action="{{ path('admin_album_delete', { id: album.id }) }}" class="inline-block" onsubmit="return confirm('Voulez-vous vraiment supprimer cet album ?');">
          <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ album.id) }}">
          <button type="submit" class="text-red-600 inline-flex items-center hover:text-white border border-red-600 hover:bg-red-600 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:border-red-500 dark:text-red-500 dark:hover:text-white dark:hover:bg-red-600 dark:focus:ring-red-900">
              <svg class="w-5 h-5 mr-1 -ml-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>
              Supprimer
          </button>
      </form>
  </div>
</section>

{% endblock %}