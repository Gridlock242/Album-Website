{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
{% if app.user %}
<div class="bg-gray-100 dark:bg-gray-900 min-h-screen py-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Profil utilisateur -->
            <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
                <div class="flex flex-col items-center text-center">
                    <img src="{{ asset('images/assets/user/' ~ app.user.image) }}"
                         alt="Photo de profil"
                         class="w-32 h-32 rounded-full shadow mb-4">
                    <h1 class="text-xl font-semibold text-gray-800 dark:text-white">{{ app.user.email }}</h1>
                    <p class="text-gray-500 dark:text-gray-400">{{ app.user.description }}</p>

                    <div class="mt-4 flex space-x-3">
                        <a href="#" class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-lg text-sm font-medium">Envoyer un message</a>
                    </div>
                </div>
            </div>

            <!-- Album favoris -->
            <div class="md:col-span-2 bg-white dark:bg-gray-800 shadow rounded-lg p-6">
                <h2 class="text-xl font-semibold text-gray-800 dark:text-white mb-4">Albums favoris</h2>

{% if favorites|length > 0 %}
    <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for album in favorites %}
            <li class="bg-gray-100 dark:bg-gray-700 p-4 rounded-lg shadow">
                        <img src="{{ asset('images/assets/album/' ~ album.image) }}" alt="{{ album.title }}" class="w-[200px] h-[200px] object-cover rounded mb-4" />
                <h3 class="text-lg font-semibold text-gray-800 dark:text-white">{{ album.title }}</h3>
                <p class="text-sm text-gray-600 dark:text-gray-300">{{ album.band.name }}</p>
                {# ROUTE POUR ALLER VOIR LES DETAILS DE L'ALBUM #}
                {# <a href="{{ path('album_show', { id: album.id }) }}" class="text-blue-500 hover:underline text-sm mt-2 inline-block">
                    Voir l'album
                </a> #}
            </li>
        {% endfor %}
    </ul>
{% else %}
    <p class="text-gray-500 dark:text-gray-400">Aucun favori pour le moment.</p>
{% endif %}


                <h3 class="text-lg font-semibold text-gray-800 dark:text-white mt-8 mb-4">Mieux notés</h3>

                <div class="space-y-6 text-sm text-gray-700 dark:text-gray-300">
            </div>
        </div>
    </div>
</div>
{% else %}
<div class="max-w-2xl px-4 py-8 mx-auto lg:py-16">
<h1 class="text-xl font-semibold text-gray-800 dark:text-white mb-4">Vous devez être connecté pour accéder à ce contenu.</h1>
</div>
{% endif %}
{% endblock %}

